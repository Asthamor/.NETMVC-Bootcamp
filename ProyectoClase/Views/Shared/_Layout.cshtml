<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("Proyecto Clase", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })


            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Agregar Usuario", "AgregarUsuario", "Usuario", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Productos
                        </a>
                        <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("Agregar Producto", "AgregarProducto", "Producto", null, new { @class = "nav-link" })
                            @Html.ActionLink("Vender Producto", "VenderProducto", "Venta", null, new { @class = "nav-link" })
                            @Html.ActionLink("Catálogo de Productos", "Index", "Home", null, new { @class = "nav-link" })
                        </div>
                    </li>


                </ul>
            </div>
            <div class="collapse navbar-collapse"
                 id="navcol-1">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation"> @Html.ActionLink("Ir al Carrito", "VenderProducto", "Venta", null, new { @class = "nav-link" })</li>
                    <li class="nav-item" role="presentation"> @Html.ActionLink("Cerrar Sesion", "Logout", "Login", new { @class = "nav-link" }) </li>
                </ul>
            </div>
        </div>
    </nav>







    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto Curso MVC</p>
        </footer>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="loadMe" tabindex="-1" role="dialog" aria-labelledby="loadMeLabel">
        <div class="modal-dialog modal-sm text-center" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="loader"></div>
                    <div clas="loader-txt">
                        <p>Cargando. <br><br><small>🤖Por favor espere un momento nuestros robots estan trabajando... 🐱‍🚀 </small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/moment.js")
    @Scripts.Render("~/Scripts/bootstrap-datepicker.min.js")
    @Scripts.Render("~/Scripts/sweetalert2.all.min.js")
    @Scripts.Render("~/Scripts/Project/JS/jsMensajes.js")
    @Styles.Render("~/Content/bootstrap-datepicker.min.css")
    @Styles.Render("~/Content/Project/CSS/LoadingModal.css")
    @Scripts.Render("~/Scripts/Project/JS/LoadingModal.js")
    @Styles.Render("https://fonts.googleapis.com/icon?family=Material+Icons")


    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
