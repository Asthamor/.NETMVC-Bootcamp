@model ModelLayer.ProductoModel

@{
    ViewBag.Title = "AgregarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/Content/Project/CSS/HomeIndex.css")

}
<h2 class="text-center">Agregar Producto</h2>

@using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.SKU, new { htmlAttributes = new { @placeholder = "SKU", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SKU, "", new { @class = "text-danger" })
        </div>

        <div class="form-group ">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @placeholder = "Nombre del Producto", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
        <div class="form-group ">
            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @placeholder = "Stock", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
        </div>
        <div class="form-group ">
            @Html.EditorFor(model => model.PrecioVenta, new { htmlAttributes = new { @placeholder = "Precio de Venta", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PrecioVenta, "", new { @class = "text-danger" })
        </div>
        <div class="form-group ">
            @Html.EditorFor(model => model.PrecioCompra, new { htmlAttributes = new { @placeholder = "Precio de Compra", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PrecioCompra, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="file" class="custom-file-input" id="Imagen" name="Imagen"/>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-right">
                <input type="submit" value="Agregar Producto" class="btn btn-primary btn-default text-right" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver al Inicio", "Index")
</div>
