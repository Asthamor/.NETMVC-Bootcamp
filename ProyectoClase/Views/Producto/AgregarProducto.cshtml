@model DataLayer.Producto

@{
    ViewBag.Title = "AgregarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/Content/Project/CSS/HomeIndex.css")

}

@section Scripts{
    @Scripts.Render("~/Scripts/Project/JS/Producto.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/localization/messages_es.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.min.js")
}


<h2 class="text-center">Agregar Producto</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @id = "createProductForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.sku, new { htmlAttributes = new { @placeholder = "SKU", @class = "form-control", @required = "true", @length = "20", minlength = "10" } })
            @Html.ValidationMessageFor(model => model.sku, "", new { @class = "text-danger" })
        </div>

        <div class="form-group ">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @placeholder = "Nombre del Producto", @class = "form-control", @required = "true", @length = "100"} })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
        <div class="form-group ">
            @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @placeholder = "Stock", type="number", @class = "form-control", @required = "true" , min="1"} })
            @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
        </div>
        <div class="form-group ">
            @Html.EditorFor(model => model.precio_venta, new { htmlAttributes = new { @placeholder = "Precio de Venta", @class = "form-control", @required = "true" , type="number", min="0"} })
            @Html.ValidationMessageFor(model => model.precio_venta, "", new { @class = "text-danger" })
        </div>
        <div class="form-group ">
            @Html.EditorFor(model => model.precio_compra, new { htmlAttributes = new { @placeholder = "Precio de Compra", @class = "form-control", @required = "true" , type="number", min="0"} })
            @Html.ValidationMessageFor(model => model.precio_compra, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="file" class="custom-file-input" id="imagen" name="imagen" />
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-right">
                <input type="submit" value="Agregar Producto" class="btn btn-primary btn-default text-right" />
            </div>
        </div>
    </div>
}

@Html.Hidden("URLCreateProduct", Url.Action("Create", "Producto"))

