
@{
    ViewBag.Title = "VenderProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/Scripts/Project/JS/VentaProductos.js")
}

<h2 class="text-center">VenderProducto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">


    

    <div class="row">
        <h4 class="col-sm-6">
            <label for="usuario">Vendedor:</label>
            <span name="usuario" id="usuario">@Session["Usuario"]</span>
        </h4>
        <h4 class="col-sm-6">
            <label>Folio:</label>
            <span id="FolioVenta"></span>
        </h4>

    </div>

    <div class="row">
        <div class="form-control">
            <label for="productSearch">SKU de producto</label>
            <input type="text" name="productSearch" id="productSearch" />
        </div>
        <div class="form-control">
            <label for="cantidad">Cantidad</label>
            <input type="text" name="cantidad" id="cantidad" />
        </div>
    </div>

</div>
}

<table class="table table-responsive tab" id="Productos">

</table>

@Html.Hidden("URLProductSuggestions", Url.Action("SearchProduct", "Home"))

