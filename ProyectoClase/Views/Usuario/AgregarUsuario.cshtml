@model DataLayer.Usuario

@{
    ViewBag.Title = "AgregarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    @Scripts.Render("~/Scripts/Project/JS/Usuario.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/localization/messages_es.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.min.js")
}

<h2 class="text-center">Agregar Usuario</h2>

@using (Html.BeginForm(null, null, /*"Create", "Usuario" */ FormMethod.Post, new { id = "createUserForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.usuario1, new { htmlAttributes = new { @placeholder = "Nombre de usuario", @class = "form-control", @required = "true", @length = "50", minlength = "5" } })
            @Html.ValidationMessageFor(model => model.usuario1, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.EditorFor(model => model.password, new
            {
                htmlAttributes = new
                {
                    @placeholder = "Contraseña",
                    @class = "form-control",
                    @autocomplete = "new-password",
                    @length = "255",
                    @pattern = "(?=.*[1-9])(?=.*[a-z])(?=.*[A-Z]).{8,}",
                    @required = true,
                    @type = "password",
                    @title = "Debe contener al menos 8 caracteres, incluyendo mayúscula, minúscula y un número."
                }
            })

            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Editor("ConfirmPasswd", null, "ConfirmPasswd", new
            {
                htmlAttributes = new
                {
                    @id = "pass_confirm",
                    @name = "pass_confirm",
                    @placeholder = "Confirmar Contraseña",
                    @class = "form-control",
                    @autocomplete = "new-password",
                    @length = "255",
                    @minlength = "8",
                    @required = true,
                    @type = "password",
                }
            })
            @Html.ValidationMessage("ConfirmPasswd", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @placeholder = "Nombre", @class = "form-control", @required = "true", @length = "100" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @placeholder = "Apellidos", @class = "form-control", @required = "true", @length = "255" } })
            @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="input-group date" data-date-format="dd.mm.yyyy">
                <input type="text" id="fechaNacimiento" class="form-control"
                       data-val="true" data-val-date="Debe introducir una fecha válida" name="fechaNacimiento" placeholder="Fecha de nacimiento" value="" required />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                </span>
            </div>

            @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @placeholder = "E-mail", @class = "form-control", type = "email", required = "true" } })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-right">
                <input type="submit" value="Crear Usuario" class="btn btn-primary btn-default text-right" />
            </div>
        </div>
    </div>
}

@Html.Hidden("URLCreateUser", Url.Action("Create", "Usuario"))

