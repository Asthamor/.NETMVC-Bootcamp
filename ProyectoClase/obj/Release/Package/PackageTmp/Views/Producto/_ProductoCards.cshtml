@model IEnumerable<DataLayer.Producto>

<div class="row">


    @foreach (var item in Model)
    {
        @{
            string imgSrc;
            if (item.imagen != null)
            {
                var base64 = Convert.ToBase64String(item.imagen);
                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            else
            {
                imgSrc = Url.Content("~/Content/images/nopic_homebox.png");
            }

        }

        <div class="card col-12 col-md-6 col-lg-4" style="width: 18rem;">
            <img class="card-img-top" src="@imgSrc" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h5>
                <p class="card-text">$@Html.DisplayFor(modelItem => item.precio_venta)</p>
                <div class="text-muted">
                    Disponibles: @Html.DisplayFor(modelItem => item.stock)
                </div>
                <a href="#" class="btn btn-success">Agregar al carrito</a>
            </div>
        </div>


        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="image"><a href="#"><img class="img-fluid d-block mx-auto" src="@imgSrc"></a></div>
                <div class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.nombre)</a></div>
                <div class="about">
                    <div class="price">
                        <h3>$@Html.DisplayFor(modelItem => item.precio_venta)</h3>
                    </div>
                    <div class="text-muted">
                        Disponibles: @Html.DisplayFor(modelItem => item.stock)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

